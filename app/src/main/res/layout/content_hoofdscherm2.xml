<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hsl.imtpmd.imtpmd.HoofdschermActivity"
    tools:showIn="@layout/activity_hoofdscherm">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="236dp"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/hsleiden"
        android:layout_marginStart="118dp"
        android:layout_marginEnd="118dp" />

    <Button
        android:id="@+id/Instellingenbutton"
        android:layout_width="122dp"
        android:layout_height="76dp"
        android:backgroundTint="#3f51b5"
        android:text="Instellingen"
        android:textColor="#ffffff"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/puntenOverzichtbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.68"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TableRow
        android:layout_width="373dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="121dp">

        <Button
            android:id="@+id/puntenOverzichtbutton"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginBottom="130dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="#3f51b5"
            android:text="punten overzicht"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/hoofdfase34Button"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#3f51b5"
            android:text="hoofdfase 2/3"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </TableRow>

    <TableRow
        android:layout_width="376dp"
        android:layout_height="76dp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="250dp">

        <Button
            android:id="@+id/hoofdfase1Button"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#3f51b5"
            android:text="Hoofdfase 1"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/puntenOverzichtbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.956" />

        <Button
            android:id="@+id/propedeuseButton"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#3f51b5"
            android:text="Propedeuse"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/hoofdfase34Button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.956" />
    </TableRow>

</android.support.constraint.ConstraintLayout>
