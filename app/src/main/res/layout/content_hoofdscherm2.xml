<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hsl.imtpmd.imtpmd.HoofdschermActivity"
    tools:showIn="@layout/activity_hoofdscherm">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="236dp"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/gebruikersnaam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/hsleiden" />

    <Button
        android:id="@+id/propedeuseButton"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#3f51b5"
        android:text="Propedeuse"
        android:textColor="#ffffff"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hoofdfase1Button"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/hoofdfase1Button"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="37dp"
        android:backgroundTint="#3f51b5"
        android:text="Hoofdfase 1"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/hoofdfase34Button"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#3f51b5"
        android:text="hoofdfase 2/3"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/puntenOverzichtbutton" />

    <Button
        android:id="@+id/puntenOverzichtbutton"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3f51b5"
        android:text="punten overzicht"
        android:textColor="#ffffff"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp" />

    <Button
        android:id="@+id/Instellingenbutton"
        android:layout_width="122dp"
        android:layout_height="76dp"
        android:backgroundTint="#3f51b5"
        android:text="Instellingen"
        android:textColor="#ffffff"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/puntenOverzichtbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
