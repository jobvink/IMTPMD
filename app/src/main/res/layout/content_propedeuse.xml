<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hsl.imtpmd.imtpmd.Propedeuse"
    tools:showIn="@layout/activity_propedeuse">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HoofdPText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hoofdvakken propedeuse"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <ListView
                android:id="@+id/hoofdvakkenP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/SpecialisatiepText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Specialisatie propedeuse"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="22sp" />

            <ListView
                android:id="@+id/KeuzeP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
