<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hsl.imtpmd.imtpmd.Propedeuse"
    tools:showIn="@layout/activity_propedeuse"
    android:orientation="vertical">


    <Button
        android:id="@+id/puntenButtonP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3f51b5"
        android:text="Punten overzicht"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/HoofdPText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Hoofdvakken propedeuse"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/hoofdvakkenP"
        android:layout_width="match_parent"
        android:layout_height="195dp" />

    <TextView
        android:id="@+id/SpecialisatiepText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Specialisatie propedeuse"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/KeuzeP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
